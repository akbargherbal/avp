# Coverage Configuration
[run]
source = backend/
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */.venv/*
    */site-packages/*

[report]
# Fail if coverage falls below 90%
fail_under = 90

# Show missing lines
show_missing = True

# Precision for coverage percentage
precision = 2

# Exclude lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    def __str__
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod
    
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    
    # Don't complain about protocol/interface definitions
    class .*\bProtocol\):
    @overload

[html]
directory = htmlcov
title = Algorithm Visualization Platform - Backend Coverage Report

[xml]
output = coverage.xml
